<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!--
    Plantilla Principal (Despachadora)
    Su única función es verificar la compañía y el campo 'emergencies'
    del pedido de venta y llamar a la plantilla de contrato correcta.
    Las plantillas de contenido real se encuentran en el directorio /contracts.
  -->
  <template id="report_saleorder_contract_document">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-set="o" t-value="doc" />
        <t t-set="company" t-value="doc.company_id" />

        <!-- Lógica de Despacho para COMFYE S.R.L. (ID: 1) -->
        <t t-if="doc.company_id.id == 1">
          <t t-call="web.external_layout_tucuman">
            <t t-call="insurance_api.contract_body_company_tucuman" />
          </t>
        </t>

        <!-- Lógica de Despacho para COMFYE CORDOBA S.A. (ID: 2) -->
        <t t-if="doc.company_id.id == 2">
          <t t-call="web.external_layout_bubble">
            <div class="page">
              <t t-call="insurance_api.contract_body_company_cordoba" />
            </div>
          </t>
        </t>

        <!-- Lógica de Despacho para GRUPO COMFYE NACIONAL S.R.L. (ID: 3) -->
        <t t-if="doc.company_id.id == 3">
          <t t-call="web.external_layout_folder">
            <div class="page">
              <t t-call="insurance_api.contract_body_company_nacional" />
            </div>
          </t>
        </t>
      </t>
    </t>
  </template>
</odoo>