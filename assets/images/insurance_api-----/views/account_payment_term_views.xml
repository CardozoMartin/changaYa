<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_payment_term_form_inherit_insurance" model="ir.ui.view">
    <field name="name">account.payment.term.form.inherit.insurance</field>
    <field name="model">account.payment.term</field>
    <field name="inherit_id" ref="account.view_payment_term_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='line_ids']/list/field[@name='value_amount']" position="before">
                <field name="installment_number"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='value_amount']" position="after">
                <field name="interest_rate"/>
                <field name="discount_rate"/>
                <field name="due_date" optional="show"/>
            </xpath>
    </field>
  </record>
</odoo>
